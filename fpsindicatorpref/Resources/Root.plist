<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>items</key>
	<array>
		<!-- Main Toggle -->
		<dict>
			<key>cell</key>
			<string>PSGroupCell</string>
			<key>label</key>
			<string>Status</string>
		</dict>
		<dict>
			<key>cell</key>
			<string>PSSwitchCell</string>
			<key>default</key>
			<true/>
			<key>defaults</key>
			<string>com.fpsindicator</string>
			<key>key</key>
			<string>enabled</string>
			<key>label</key>
			<string>Enable FPS Indicator</string>
			<key>PostNotification</key>
			<string>com.fpsindicator/loadPref</string>
			<key>requiresRespring</key>
			<true/>
		</dict>
		
		<!-- App Selection -->
		<dict>
			<key>cell</key>
			<string>PSGroupCell</string>
			<key>label</key>
			<string>Applications</string>
		</dict>
		<dict>
			<key>cell</key>
			<string>PSButtonCell</string>
			<key>label</key>
				<string>Select Apps</string>
			<key>action</key>
			<string>selectApps</string>
		</dict>
		
		<!-- Simple Appearance -->
		<dict>
			<key>cell</key>
			<string>PSGroupCell</string>
			<key>label</key>
			<string>Appearance</string>
		</dict>
		<dict>
			<key>cell</key>
			<string>PSSegmentCell</string>
			<key>default</key>
			<integer>0</integer>
			<key>defaults</key>
			<string>com.fpsindicator</string>
			<key>key</key>
			<string>position</string>
			<key>label</key>
			<string>Position</string>
			<key>validTitles</key>
			<array>
				<string>Top Right</string>
				<string>Top Left</string>
				<string>Bottom Right</string>
				<string>Bottom Left</string>
			</array>
			<key>validValues</key>
			<array>
				<integer>0</integer>
				<integer>1</integer>
				<integer>2</integer>
				<integer>3</integer>
			</array>
			<key>PostNotification</key>
			<string>com.fpsindicator/loadPref</string>
		</dict>
		<dict>
			<key>cell</key>
			<string>PSLinkListCell</string>
			<key>default</key>
			<string>#00FF00</string>
			<key>defaults</key>
			<string>com.fpsindicator</string>
			<key>key</key>
			<string>color</string>
			<key>label</key>
			<string>Text Color</string>
			<key>validTitles</key>
			<array>
				<string>Green</string>
				<string>Yellow</string>
				<string>Red</string>
				<string>White</string>
				<string>Blue</string>
			</array>
			<key>validValues</key>
			<array>
				<string>#00FF00</string>
				<string>#FFFF00</string>
				<string>#FF0000</string>
				<string>#FFFFFF</string>
				<string>#0000FF</string>
			</array>
			<key>PostNotification</key>
			<string>com.fpsindicator/loadPref</string>
		</dict>
		
		<!-- Footer Section -->
		<dict>
			<key>cell</key>
			<string>PSGroupCell</string>
			<key>footerText</key>
			<string>FPSIndicator shows frames per second in compatible apps and games.
			
Restart the app after changing settings.</string>
		</dict>
	</array>
	<key>title</key>
	<string>FPS Indicator</string>
</dict>
</plist>
